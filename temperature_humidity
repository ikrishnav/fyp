from pycoproc_2 import Pycoproc
from SI7006A20 import SI7006A20
import time

# Initialize Pycoproc and Sensor
py = Pycoproc()
si = SI7006A20(py)

while True:
    temperature = si.temperature()      # In Â°C
    humidity = si.humidity()           # In %

    print("ğŸŒ¡ï¸ Temperature:", round(temperature, 2), "Â°C")
    print("ğŸ’§ Humidity:", round(humidity, 2), "%")
    print("-" * 30)

    time.sleep(5)  # Delay between readings
