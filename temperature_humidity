from pycoproc_2 import Pycoproc
from SI7006A20 import SI7006A20
import time

# Initialize Pycoproc and Sensor
py = Pycoproc()
si = SI7006A20(py)

while True:
    temperature = si.temperature()      # In °C
    humidity = si.humidity()           # In %

    print("🌡️ Temperature:", round(temperature, 2), "°C")
    print("💧 Humidity:", round(humidity, 2), "%")
    print("-" * 30)

    time.sleep(5)  # Delay between readings
